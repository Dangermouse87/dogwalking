<div class="container justify-content">
  <div class="form-inline mt-3">
    <%= form_tag dogsittings_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-inline col-sm-6",
        placeholder: "Find a dogsitter"
      %>
      <%= submit_tag "Search", class: "button-main" %>
    <% end %>
  </div>
  <div class="row">
    <% @dogsittings.each do |dogsitting| %>
      <div class="container-small-profile">
        <div class="card-small-profile">
          <div class="gradient">
          </div>
          <div class="small-profile-img">
            <img src="https://ca.slack-edge.com/T02NE0241-U038STG9291-d68736458302-512" alt="user">
          </div>
          <div class="content-small-profile">
            <div class="top">
              <h1><%=dogsitting.user.first_name%> <%=dogsitting.user.last_name%></h1>
              <h2><%=dogsitting.location %></h2>
              <h2>Â¥<%=dogsitting.rate %>/hour</h2>
              <h2>Available on <%=dogsitting.availability%></h2>
            </div>
          <div class="bottom">
            <%= link_to "Show more information", dogsitting_path(dogsitting), class: "nav-link", class: "button-main" %>
          </div>
          </div>
        </div>
      </div>
    <% end %>
      <div class="map" style="col-6 width: 50%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
